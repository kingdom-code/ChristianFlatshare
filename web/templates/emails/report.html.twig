{% extends "emails/base.html.twig" %}

{% block body %}
    <p>A visitor has reported the following: <strong><a href="{{ advert.url }}">{{ advert.title }}</a></strong></p>
    <p>Visitor details:</p>
    <p>Name: <strong>{{ name }}</strong><br/>
    Email: <strong>{{ email }}</strong></p>
    <p>Their message:</p>
    <p><strong>{{ message|nl2br }}</strong></p>
{% endblock %}