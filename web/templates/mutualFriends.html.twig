{%- if friends is not empty -%}
<div class="FBFriends">
    <div class="label">Mutual Friends</div>
{% for friend in friends %}
<a href="http://www.facebook.com/{{ friend.facebook_id }}" target="_blank"><img src="{{ friend.picture_url }}" width="40" height="40" alt="{{ friend.first_name}} {{ friend.last_name}}" title="{{ friend.first_name}} {{ friend.last_name}}" /></a>
{% endfor %}
</div>
{%- endif -%}